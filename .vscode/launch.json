    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 3000,
      "address": "localhost",
      "restart": false,
      "sourceMaps": false,
      "localRoot": "${workspaceRoot}/apps/server",
      "remoteRoot": null
    }
  ]
