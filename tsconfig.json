{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "isolatedModules": true
  },
  "references": [
    { "path": "apps/client" },
    { "path": "apps/server" },
    { "path": "packages/shared" }
  ]
}
